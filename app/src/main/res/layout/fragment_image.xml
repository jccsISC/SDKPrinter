<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewPrintingType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Printing Type : "
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <RadioGroup
                    android:id="@+id/radioGroupPrint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium">

                    <RadioButton
                        android:id="@+id/radioImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Image" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewSelectFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinearLayout1"
                android:layout_alignParentLeft="true"
                android:text="File Path : "
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewFilePath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSelectFile"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/buttonFileSelect"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonFileSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewFilePath"
                android:layout_alignParentRight="true"
                android:text="Select File"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/LinearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonFileSelect"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewWidth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Width : " />

                <EditText
                    android:id="@+id/editTextWidth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number" />

                <Button
                    android:id="@+id/buttonGetWidth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Get Max Width" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinearLayout3"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewAlignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alignment : " />

                <Spinner
                    android:id="@+id/imageAlignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewBrightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinearLayout4"
                android:text="Brightness : "
                android:visibility="gone" />

            <SeekBar
                android:id="@+id/seekBarBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewBrightness"
                android:layout_alignParentLeft="true"
                android:max="100"
                android:progress="50"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/LinearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBarBrightness"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewStartPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start page : " />

                <EditText
                    android:id="@+id/editTextStartPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinearLayout5"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewEndPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Page : " />

                <EditText
                    android:id="@+id/editTextEndPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinearLayout6"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewDither"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dither : " />

                <Spinner
                    android:id="@+id/imageDither"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinearLayout7"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewCompress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compress : " />

                <Spinner
                    android:id="@+id/imageCompress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewDeviceMessages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinearLayout8"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:visibility="gone" />
        </RelativeLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/txtBthStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.934"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/to_printer" />

        <TextView
            android:id="@+id/txtBthStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lottieAnimationView"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Imprimir ticket"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonPrint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBthStatus"
            android:layout_marginStart="24dp"
            android:background="@drawable/shape_tbn"
            android:textColor="@android:color/white"
            android:foreground="?selectableItemBackgroundBorderless"
            android:textAllCaps="false"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            android:text="Imprimir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressPrinter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/lottieAnimationView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


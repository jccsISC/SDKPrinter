<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="StyleButton" parent="Widget.MaterialComponents.Button">
        <item name="strokeColor">@color/purple_500</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <!--BottomSheet Style-->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_ship</item>
    </style>

</resources>